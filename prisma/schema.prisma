generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  plan          String    @default("free")
  role          String    @default("USER") // ADMIN or USER
  status        String    @default("ACTIVE") // ACTIVE or SUSPENDED
  createdAt     DateTime  @default(now())
  
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  generations   Generation[]
  payments      Payment[]
}

model Generation {
  id            String    @id @default(cuid())
  prompt        String
  theme         String
  content       String    // Stored as JSON string
  userId        String?
  paymentStatus String    @default("PENDING") // PENDING, SUBMITTED, SUCCESS
  upiTxnId      String?
  createdAt     DateTime  @default(now())
  
  user          User?     @relation(fields: [userId], references: [id])
}

model Payment {
  id            String    @id @default(cuid())
  orderId       String    @unique
  amount        Int       // Stored in paise/cents
  tier          String    // Student, Creator, Agency
  status        String    @default("PENDING") // PENDING, SUCCESS, FAILED
  userId        String?
  createdAt     DateTime  @default(now())

  user          User?     @relation(fields: [userId], references: [id])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id        String   @id @default(cuid())
  userId    String
  prompt    String
  result    Json
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
